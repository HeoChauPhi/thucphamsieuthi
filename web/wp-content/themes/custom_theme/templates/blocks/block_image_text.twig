{% if block_layout == "image_text" %}
  {% set layout_class = 'image-text' %}
{% else %}
  {% set layout_class = 'text-image' %}
{% endif %}

<div class="block-image-text">
  <div class="{{ layout_class }} row">
    <div class="block-image col-md-6"><img src="{{ block_image.url }}" alt="{{ block_image.title }}" title="{{ block_image.title }}"></div>
    <div class="block-text col-md-6">
      <h3 class="block-title">{{ block_title }}</h3>
      <div class="block-content">{{ block_content|shortcodes }}</div>
    </div>
  </div>
</div>